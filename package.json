{
  "name": "RiskManagement",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/http-client": "^4.3.1",
    "@sap-cloud-sdk/util": "^4.3.1",
    "@sap/cds": "^9",
    "@sap/low-code-event-handler": "^1.2.5",
    "@sap/xsenv": ">=3.3.2 <3.3.3",
    "@sap/xssec": "^4.12.2",
    "express": "^4",
    "hdb": "^2.26.4",
    "passport": "^0.7.0",
    "@sap-cloud-sdk/connectivity": "^4",
    "@sap-cloud-sdk/resilience": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/dev-cap-tools": "^1.31.0"
  },
  "scripts": {
    "start": "cds-serve",
    "start-local": "npm run generate-entry-point && npm run cds-watch",
    "generate-entry-point": "dev-cap-tools gen-entrypoint",
    "cds-watch": "cds watch --open",
    "watch-riskmanagement.risks": "cds watch --open riskmanagement.risks/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "private": true,
  "cds": {
    "requires": {
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "auth": {
        "[development]": {
          "kind": "dummy"
        },
        "[production]": {
          "kind": "xsuaa"
        }
      },
      "BusinessPartnerA2X": {
        "kind": "odata-v2",
        "model": "srv/external/BusinessPartnerA2X",
        "[production]": {
          "credentials": {
            "path": "s4hanacloud/sap/opu/odata/sap/API_BUSINESS_PARTNER"
          }
        },
        "csrf": true,
        "csrfInBatch": true
      }
    }
  },
  "lcap": true,
  "sapux": [
    "app/riskmanagement.risks"
  ]
}
